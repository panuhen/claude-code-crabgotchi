{
  "name": "claude-code-crabgotchi",
  "displayName": "Claude Code Crabgotchi",
  "description": "A cute ASCII crab companion that reacts to your Claude Code sessions",
  "version": "0.1.4",
  "publisher": "panuhen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panuhen/claude-code-crabgotchi"
  },
  "bugs": {
    "url": "https://github.com/panuhen/claude-code-crabgotchi/issues"
  },
  "icon": "media/icon.png",
  "keywords": [
    "claude",
    "claude-code",
    "tamagotchi",
    "crab",
    "pet",
    "companion",
    "ascii",
    "sidebar"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": ["workspace"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "claudeCrab.tamagotchi",
          "name": "Crabgotchi"
        }
      ]
    },
    "commands": [
      {
        "command": "claudeCrab.feed",
        "title": "Feed the Crab"
      },
      {
        "command": "claudeCrab.pet",
        "title": "Pet the Crab"
      }
    ],
    "configuration": {
      "title": "Crabgotchi",
      "properties": {
        "crabgotchi.crabColor": {
          "type": "string",
          "default": "#e5c07b",
          "enum": [
            "#e5c07b",
            "#98c379",
            "#61afef",
            "#c678dd",
            "#e06c75",
            "#56b6c2",
            "#ffffff"
          ],
          "enumItemLabels": [
            "Amber (Default)",
            "Green",
            "Blue",
            "Purple",
            "Red",
            "Cyan",
            "White"
          ],
          "description": "Color of your crab"
        },
        "crabgotchi.bubbleColor": {
          "type": "string",
          "default": "#e5c07b",
          "enum": [
            "#e5c07b",
            "#98c379",
            "#61afef",
            "#c678dd",
            "#e06c75",
            "#56b6c2",
            "#ffffff"
          ],
          "enumItemLabels": [
            "Amber (Default)",
            "Green",
            "Blue",
            "Purple",
            "Red",
            "Cyan",
            "White"
          ],
          "description": "Color of the speech bubble"
        },
        "crabgotchi.breakTimer.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable break reminder timer"
        },
        "crabgotchi.breakTimer.minutes": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "maximum": 120,
          "description": "Break timer duration in minutes (Pomodoro default: 25)"
        },
        "crabgotchi.claudeLogsPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to Claude logs folder (e.g., \\\\wsl$\\Ubuntu\\home\\username\\.claude\\projects). Leave empty for auto-detection."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
